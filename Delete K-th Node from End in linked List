#include <stdio.h>
#include <stdlib.h>

typedef struct Node {
    int data;
    struct Node *next;
} Node;

Node* newNode(int val) {
    Node *n = malloc(sizeof(Node));
    n->data = val; n->next = NULL;
    return n;
}

void deleteKthFromEnd(Node **head, int k) {
    Node *fast = *head, *slow = *head, *prev = NULL;
    for (int i = 0; i < k; i++) fast = fast->next;
    while (fast) {
        fast = fast->next;
        prev = slow;
        slow = slow->next;
    }
    if (prev) prev->next = slow->next;
    else *head = slow->next;
    free(slow);
}

void freeList(Node *head) {
    while (head) {
        Node *tmp = head;
        head = head->next;
        free(tmp);
    }
}

int main() {
    Node *head = newNode(1);
    head->next = newNode(2);
    head->next->next = newNode(3);
    head->next->next->next = newNode(4);

    deleteKthFromEnd(&head, 2);  // delete 2nd from end
    for (Node *p = head; p; p = p->next)
        printf("%d ", p->data);
    freeList(head);
}
