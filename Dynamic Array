#include <stdio.h>
#include <stdlib.h>

int main() {
    int *arr, n, i, sum = 0, max;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    arr = (int *)malloc(n * sizeof(int));
    if (!arr) return 1;

    printf("Enter %d integers:\n", n);
    for (i = 0; i < n; i++)
        scanf("%d", arr + i);

    max = *arr;
    for (i = 0; i < n; i++) {
        sum += *(arr + i);
        if (*(arr + i) > max) max = *(arr + i);
    }

    printf("Sum = %d, Max = %d\n", sum, max);
    free(arr);
    return 0;
}
